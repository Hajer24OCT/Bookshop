<?xml version="1.0" encoding="utf-8"?>
<!-- activity_books.xml -->

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Books">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="835dp"
        android:layout_height="1118dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.029"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.41"
        app:srcCompat="@drawable/bottom_white" />

    <GridView
        android:id="@+id/gridView"
        android:layout_width="388dp"
        android:layout_height="479dp"
        android:background="@android:color/white"
        android:backgroundTint="#F1F1F1"
        android:numColumns="2"
        android:verticalSpacing="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        tools:ignore="MissingConstraints" />

    <!-- Add your payment-related views here -->
    <!-- For example, you can include EditTexts for card number, expiry date, CVV, etc. -->
    <!-- And a Button for payment confirmation -->

</androidx.constraintlayout.widget.ConstraintLayout>